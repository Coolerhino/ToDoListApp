@using ToDoListApp.Domain.Enums
@model ToDoListApp.Application.ToDoItems.Commands.AddToDoItem.CreateToDoItemCommand
@{
    ViewData["Title"] = "Create";
}

<h1>Create a ToDo item</h1>
<form asp-controller="ToDoList" asp-action="Create" method="post" class="form-group">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" />
        </div>
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Priority" class="col-sm-2 col-form-label"></label>
        <select asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()" class="btn btn-primary dropdown-toggle form-inline"></select>
    </div>
    <div class="form-group row">
        <label asp-for="EstimatedDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="date" asp-for="EstimatedDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EstimatedTime" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="time" asp-for="EstimatedDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>