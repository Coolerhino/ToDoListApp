@using ToDoListApp.Domain.Enums
@model ToDoListApp.Domain.Entities.ToDoItem
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit ToDo item</h1>

<form asp-controller="ToDoList" asp-action="Edit" class="form-group">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" value="@Model.Title" class="form-control" />
        </div>
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" value="@Model.Description" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Priority" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()" class="btn btn-primary dropdown-toggle form-inline">
                <option selected="selected" value="@Model.Priority"></option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EstimatedFinish" class="col-sm-2 col-form-label">Estimated finish date</label>
        <div class="input-group col-sm-10 date">
            <input asp-for="EstimatedFinish" type="text" value="@Model.EstimatedFinish.ToString("g")" class="form-control datetimepicker-input" id="datetimepicker5" data-toggle="datetimepicker" data-target="#datetimepicker5"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Done" class="col-sm-2 form-check-label"></label>
        <div class="form-check">
            <input asp-for="Done" type="checkbox" value="@Model.Done" class="form-check-inline"/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>